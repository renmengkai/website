---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = '个人博客与作品集 - 记录技术探索与创意实现',
  image = '/og-image.png'
} = Astro.props;

const currentPath = Astro.url.pathname;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Fira Code 字体 -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col bg-white">
    <!-- 全局页面过渡骨架屏 - 点击链接后立即显示 -->
    <div class="page-transition-skeleton fixed inset-0 z-50 bg-white" style="display: none;">
      <div class="skeleton-animate">
        <!-- Header 骨架 -->
        <div class="h-16 border-b border-gray-100 flex items-center px-6">
          <div class="h-8 w-24 bg-gray-200 rounded"></div>
          <div class="flex-1"></div>
          <div class="flex gap-6">
            <div class="h-4 w-16 bg-gray-100 rounded"></div>
            <div class="h-4 w-16 bg-gray-100 rounded"></div>
            <div class="h-4 w-16 bg-gray-100 rounded"></div>
          </div>
        </div>
        
        <!-- 内容骨架 -->
        <div class="max-w-4xl mx-auto px-6 py-24">
          <!-- 分类骨架 -->
          <div class="flex justify-center gap-2 mb-6">
            <div class="h-6 w-16 bg-gray-200 rounded-full"></div>
            <div class="h-6 w-20 bg-gray-200 rounded-full"></div>
          </div>
          
          <!-- 标题骨架 -->
          <div class="max-w-2xl mx-auto mb-6 space-y-3">
            <div class="h-10 bg-gray-200 rounded-lg w-full"></div>
            <div class="h-10 bg-gray-200 rounded-lg w-3/4 mx-auto"></div>
          </div>
          
          <!-- 元信息骨架 -->
          <div class="flex items-center justify-center gap-4 mb-12">
            <div class="w-8 h-8 bg-gray-200 rounded-full"></div>
            <div class="h-4 w-20 bg-gray-200 rounded"></div>
            <div class="h-4 w-4 bg-gray-200 rounded"></div>
            <div class="h-4 w-24 bg-gray-200 rounded"></div>
          </div>
          
          <!-- 封面图骨架 -->
          <div class="mb-12 rounded-2xl overflow-hidden">
            <div class="w-full aspect-video bg-gray-200"></div>
          </div>
          
          <!-- 文章内容骨架 -->
          <div class="space-y-4">
            <div class="space-y-2">
              <div class="h-4 bg-gray-200 rounded w-full"></div>
              <div class="h-4 bg-gray-200 rounded w-11/12"></div>
              <div class="h-4 bg-gray-200 rounded w-10/12"></div>
            </div>
            <div class="pt-4">
              <div class="h-7 bg-gray-200 rounded w-1/3"></div>
            </div>
            <div class="space-y-2">
              <div class="h-4 bg-gray-200 rounded w-full"></div>
              <div class="h-4 bg-gray-200 rounded w-full"></div>
              <div class="h-4 bg-gray-200 rounded w-9/12"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <Header currentPath={currentPath} />
    
    <main class="flex-1">
      <slot />
    </main>
    
    <Footer />
    
    <!-- 全局导航加载状态管理 -->
    <script is:inline>
      // 监听博客文章链接点击，立即显示骨架屏
      document.addEventListener('click', (e) => {
        const link = e.target.closest('a[href^="/blog/"]');
        if (link && !link.href.endsWith('/blog/') && !link.href.endsWith('/blog')) {
          // 点击的是博客文章链接，立即显示骨架屏
          document.documentElement.classList.add('is-loading');
        }
      });
      
      // 页面加载完成后隐藏骨架屏
      document.addEventListener('astro:page-load', () => {
        document.documentElement.classList.remove('is-loading');
      });
      
      // 页面开始加载时显示骨架屏
      document.addEventListener('astro:before-preparation', () => {
        const currentPath = window.location.pathname;
        // 如果是从博客列表导航到文章详情
        if (currentPath === '/blog' || currentPath === '/blog/') {
          document.documentElement.classList.add('is-loading');
        }
      });
      
      // 如果导航取消，隐藏骨架屏
      document.addEventListener('astro:after-preparation', () => {
        // 如果导航失败或取消，延迟隐藏
        setTimeout(() => {
          if (!document.startViewTransition) {
            document.documentElement.classList.remove('is-loading');
          }
        }, 100);
      });
    </script>
  </body>
</html>
