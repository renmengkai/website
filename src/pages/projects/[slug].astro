---
import Layout from '../../layouts/Layout.astro';
import Badge from '../../components/ui/Badge.astro';
import Button from '../../components/ui/Button.astro';
import MarkdownContent from '../../components/MarkdownContent.astro';
import PortableText from '../../components/PortableText.astro';
import { fetchSanity, projectBySlugQuery } from '../../lib/sanity';

// 动态路由参数
export async function getStaticPaths() {
  const projectsQuery = `*[_type == "project"] { "slug": slug.current }`;
  const projects = await fetchSanity<any[]>(projectsQuery);
  return projects.map((project) => ({ params: { slug: project.slug } }));
}

// 获取当前项目数据
const { slug } = Astro.params;
const project = await fetchSanity<any>(projectBySlugQuery, { slug });

if (!project) {
  return Astro.redirect('/404');
}

// 确保 technologies 是一个数组
const safeTechnologies = Array.isArray(project.technologies) ? project.technologies : [];
---

<Layout 
  title={`${project.title} - RMK`}
  description={project.description}
  image={project.thumbnail}
>
  <article class="section" transition:animate="fade">
    <div class="container-custom">
      <!-- 项目头部 -->
      <header class="max-w-4xl mx-auto mb-12">
        <!-- 返回按钮 -->
        <div class="mb-8">
          <a href="/projects" data-astro-prefetch="hover" class="inline-flex items-center gap-2 px-4 py-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
            </svg>
            返回作品列表
          </a>
        </div>
        
        <!-- 标题 -->
        <h1 class="text-3xl lg:text-display font-bold tracking-tight text-gray-900 dark:text-white mb-4">
          {project.title}
        </h1>
        
        <!-- 描述 -->
        <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed mb-6">
          {project.description}
        </p>
        
        <!-- 技术栈 -->
        {safeTechnologies.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-8">
            {safeTechnologies.map((tech: string) => (
              <Badge variant="primary">{tech}</Badge>
            ))}
          </div>
        )}
        
        <!-- 操作按钮 -->
        <div class="flex flex-wrap gap-4">
          {project.liveUrl && (
            <Button href={project.liveUrl} variant="primary">
              <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              在线预览
            </Button>
          )}
          {project.githubUrl && (
            <Button href={project.githubUrl} variant="secondary">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              查看源码
            </Button>
          )}
        </div>
      </header>
      
      <!-- 项目封面 -->
      {project.thumbnail && (
        <div class="max-w-4xl mx-auto mb-16 rounded-2xl overflow-hidden shadow-card">
          <img 
            src={project.thumbnail} 
            alt={project.title}
            class="w-full aspect-video object-cover"
            loading="eager"
          />
        </div>
      )}
      
      <!-- 项目图库 -->
      {project.gallery && project.gallery.length > 0 && (
        <div class="max-w-5xl mx-auto mb-16">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {project.gallery.map((img: string) => (
              <div class="rounded-xl overflow-hidden">
                <img src={img} alt={project.title} class="w-full h-full object-cover" loading="lazy" />
              </div>
            ))}
          </div>
        </div>
      )}
      
      <!-- 项目内容 -->
      {project.body && (
        <div class="max-w-3xl mx-auto">
          <div class="prose prose-lg dark:prose-invert max-w-none">
            {Array.isArray(project.body) ? (
              <PortableText blocks={project.body} />
            ) : (
              <MarkdownContent content={project.body} />
            )}
          </div>
        </div>
      )}
    </div>
  </article>
</Layout>

<style>
  /* 为 prose 添加额外样式 */
  .prose :where(h2):not(:where([class~="not-prose"] *)) {
    @apply border-b border-gray-200 dark:border-dark-200 pb-2;
  }
</style>
