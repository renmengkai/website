---
import Layout from '../../layouts/Layout.astro';
import Badge from '../../components/ui/Badge.astro';
import MarkdownContent from '../../components/MarkdownContent.astro';
import PortableText from '../../components/PortableText.astro';
import { fetchSanity, postBySlugQuery } from '../../lib/sanity';

// 动态路由参数
export async function getStaticPaths() {
  const postsQuery = `*[_type == "post"] { "slug": slug.current }`;
  const posts = await fetchSanity<any[]>(postsQuery);
  return posts.map((post) => ({ params: { slug: post.slug } }));
}

// 获取当前文章数据
const { slug } = Astro.params;
const post = await fetchSanity<any>(postBySlugQuery, { slug });

if (!post) {
  return Astro.redirect('/404');
}

// 确保 categories 是一个数组，过滤掉 null 值
const safeCategories = Array.isArray(post.categories) ? post.categories.filter((cat: any) => cat != null) : [];

const formattedDate = new Date(post.publishedAt).toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout 
  title={`${post.title} - 个人空间`}
  description={post.excerpt}
  image={post.coverImage}
>
  <article class="section" transition:animate="fade">
    <div class="container-custom">
      <!-- 文章头部 -->
      <header class="max-w-3xl mx-auto text-center mb-12">
        <!-- 分类 -->
        <div class="flex flex-wrap justify-center gap-2 mb-6">
          {safeCategories.map((cat: any) => (
            <Badge variant="primary">{cat.title}</Badge>
          ))}
        </div>
        
        <!-- 标题 -->
        <h1 class="text-3xl lg:text-display font-bold tracking-tight text-gray-900 dark:text-white mb-6 text-balance">
          {post.title}
        </h1>
        
        <!-- 元信息 -->
        <div class="flex items-center justify-center gap-4 text-gray-600 dark:text-gray-400">
          {post.author && (
            <div class="flex items-center gap-2">
              {post.author.avatar && (
                <img 
                  src={post.author.avatar} 
                  alt={post.author.name}
                  class="w-8 h-8 rounded-full object-cover"
                />
              )}
              <span class="text-sm font-medium">{post.author.name}</span>
            </div>
          )}
          <span class="text-gray-300 dark:text-gray-600">·</span>
          <time datetime={post.publishedAt} class="text-sm">{formattedDate}</time>
        </div>
      </header>
      
      <!-- 封面图 -->
      {post.coverImage && (
        <div class="max-w-4xl mx-auto mb-12 rounded-2xl overflow-hidden">
          <img 
            src={post.coverImage} 
            alt={post.title}
            class="w-full aspect-video object-cover"
            loading="eager"
          />
        </div>
      )}
      
      <!-- 文章内容 -->
      <div class="max-w-3xl mx-auto prose prose-lg dark:prose-invert max-w-none">
        {Array.isArray(post.body) ? (
          <PortableText blocks={post.body} />
        ) : (
          <MarkdownContent content={post.body} />
        )}
        
        <!-- 返回按钮 -->
        <div class="mt-16 pt-8 border-t border-gray-200 dark:border-dark-200">
          <a href="/blog" data-astro-prefetch="hover" class="inline-flex items-center gap-2 px-4 py-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
            </svg>
            返回日志列表
          </a>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  /* 为 prose 添加额外样式 */
  .prose :where(h2):not(:where([class~="not-prose"] *)) {
    @apply border-b border-gray-200 dark:border-dark-200 pb-2;
  }
</style>
