---
import Layout from '../../layouts/Layout.astro';
import Badge from '../../components/ui/Badge.astro';
import MarkdownContent from '../../components/MarkdownContent.astro';
import PortableText from '../../components/PortableText.astro';
import BlogPostSkeleton from '../../components/BlogPostSkeleton.astro';
import PostContentLoader from '../../components/PostContentLoader.vue';
import { fetchSanity, postBySlugQuery } from '../../lib/sanity';

// 使用SSR模式，允许动态处理任意slug
export const prerender = false;

// 获取当前文章数据
const { slug } = Astro.params;
const post = await fetchSanity<any>(postBySlugQuery, { slug });

// 标记是否显示404内容
const show404 = !post;

// 确保 categories 是一个数组，过滤掉 null 值
const safeCategories = post && Array.isArray(post.categories) ? post.categories.filter((cat: any) => cat != null) : [];

const formattedDate = post?.publishedAt ? new Date(post.publishedAt).toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}) : '';
---

<Layout 
  title={show404 ? '文章未找到 - RMK' : `${post.title} - RMK`}
  description={show404 ? '抱歉，您访问的文章不存在' : post.excerpt}
  image={post?.coverImage}
>
  {show404 ? (
    <!-- 404 内容 -->
    <div class="section min-h-[60vh] flex items-center justify-center">
      <div class="container-custom">
        <div class="max-w-2xl mx-auto text-center">
          <!-- 404 图标/数字 -->
          <div class="mb-8">
            <div class="inline-flex items-center justify-center w-32 h-32 rounded-full bg-gradient-to-br from-primary-100 to-primary-200 dark:from-primary-900/30 dark:to-primary-800/30 mb-6 animate-float">
              <span class="text-6xl font-bold bg-gradient-to-r from-primary-500 to-primary-600 bg-clip-text text-transparent">
                404
              </span>
            </div>
          </div>
          
          <!-- 标题 -->
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            文章不存在
          </h1>
          
          <!-- 描述 -->
          <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-md mx-auto">
            抱歉，您访问的文章 <code class="px-2 py-1 bg-gray-100 dark:bg-dark-100 rounded text-primary-500">{slug}</code> 不存在或已被删除。
          </p>
          
          <!-- 操作按钮 -->
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a 
              href="/blog"
              class="inline-flex items-center gap-2 px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white font-medium rounded-xl transition-colors shadow-lg shadow-primary-500/25"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
              浏览所有文章
            </a>
            
            <a 
              href="/"
              class="inline-flex items-center gap-2 px-6 py-3 bg-gray-100 hover:bg-gray-200 dark:bg-dark-100 dark:hover:bg-dark-200 text-gray-700 dark:text-gray-300 font-medium rounded-xl transition-colors"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              返回首页
            </a>
          </div>
        </div>
      </div>
    </div>
  ) : (
    <!-- 正常文章内容 -->
    <article class="section" transition:animate="fade">
      <div class="container-custom">
        <!-- 文章头部 - 立即显示 -->
        <header class="max-w-3xl mx-auto text-center mb-12 post-header">
          <!-- 分类 -->
          <div class="flex flex-wrap justify-center gap-2 mb-6">
            {safeCategories.map((cat: any) => (
              <Badge variant="primary">{cat.title}</Badge>
            ))}
          </div>
          
          <!-- 标题 -->
          <h1 class="text-3xl lg:text-display font-bold tracking-tight text-gray-900 dark:text-white mb-6 text-balance">
            {post.title}
          </h1>
          
          <!-- 元信息 -->
          <div class="flex items-center justify-center gap-4 text-gray-600 dark:text-gray-400">
            {post.author && (
              <div class="flex items-center gap-2">
                {post.author.avatar && (
                  <img 
                    src={post.author.avatar} 
                    alt={post.author.name}
                    class="w-8 h-8 rounded-full object-cover"
                  />
                )}
                <span class="text-sm font-medium">{post.author.name}</span>
              </div>
            )}
            <span class="text-gray-300 dark:text-gray-600">·</span>
            <time datetime={post.publishedAt} class="text-sm">{formattedDate}</time>
          </div>
        </header>
        
        <!-- 封面图 - 立即显示 -->
        {post.coverImage && (
          <div class="max-w-4xl mx-auto mb-12 rounded-2xl overflow-hidden post-cover">
            <img 
              src={post.coverImage} 
              alt={post.title}
              class="w-full aspect-video object-cover"
              loading="eager"
            />
          </div>
        )}
        
        <!-- 文章内容 - 使用骨架屏加载器 -->
        <div class="max-w-3xl mx-auto prose prose-lg dark:prose-invert max-w-none">
          <PostContentLoader client:load>
            {Array.isArray(post.body) ? (
              <PortableText blocks={post.body} />
            ) : (
              <MarkdownContent content={post.body} />
            )}
          </PostContentLoader>
          
          <!-- 返回按钮 -->
          <div class="mt-16 pt-8 border-t border-gray-200 dark:border-dark-200">
            <a href="/blog" data-astro-prefetch="hover" class="inline-flex items-center gap-2 px-4 py-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
              </svg>
              返回日志列表
            </a>
          </div>
        </div>
      </div>
    </article>
  )}
</Layout>

<style>
  /* 为 prose 添加额外样式 */
  .prose :where(h2):not(:where([class~="not-prose"] *)) {
    @apply border-b border-gray-200 dark:border-dark-200 pb-2;
  }
  
  /* 文章头部和封面图入场动画 */
  .post-header,
  .post-cover {
    animation: slideUp 0.4s ease-out;
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* 404 浮动动画 */
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
</style>
