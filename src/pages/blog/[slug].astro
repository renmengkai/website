---
import Layout from '../../layouts/Layout.astro';
import Badge from '../../components/ui/Badge.astro';
import Button from '../../components/ui/Button.astro';
import { fetchSanity, postBySlugQuery } from '../../lib/sanity';

// 动态路由参数
export async function getStaticPaths() {
  // 从 Sanity 获取所有博客文章的 slug
  const postsQuery = `*[_type == "post"] {
    "slug": slug.current
  }`;
  
  const posts = await fetchSanity<any[]>(postsQuery);

  return posts.map((post) => ({
    params: { slug: post.slug }
  }));
}

// 获取当前文章数据
const { slug } = Astro.params;
const post = await fetchSanity<any>(postBySlugQuery, { slug });

if (!post) {
  return Astro.redirect('/404');
}

const formattedDate = new Date(post.publishedAt).toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout 
  title={`${post.title} - 个人空间`}
  description={post.excerpt}
  image={post.coverImage}
>
  <article class="section">
    <div class="container-custom">
      <!-- 文章头部 -->
      <header class="max-w-3xl mx-auto text-center mb-12">
        <!-- 分类 -->
        <div class="flex flex-wrap justify-center gap-2 mb-6">
          {post.categories?.map((cat: any) => (
            <Badge variant="primary">{cat.title}</Badge>
          ))}
        </div>
        
        <!-- 标题 -->
        <h1 class="text-3xl lg:text-display font-bold tracking-tight text-gray-900 dark:text-white mb-6 text-balance">
          {post.title}
        </h1>
        
        <!-- 元信息 -->
        <div class="flex items-center justify-center gap-4 text-gray-600 dark:text-gray-400">
          {post.author && (
            <div class="flex items-center gap-2">
              <img 
                src={post.author.avatar} 
                alt={post.author.name}
                class="w-8 h-8 rounded-full object-cover"
              />
              <span class="text-sm font-medium">{post.author.name}</span>
            </div>
          )}
          <span class="text-gray-300 dark:text-gray-600">·</span>
          <time datetime={post.publishedAt} class="text-sm">{formattedDate}</time>
        </div>
      </header>
      
      <!-- 封面图 -->
      {post.coverImage && (
        <div class="max-w-4xl mx-auto mb-12 rounded-2xl overflow-hidden">
          <img 
            src={post.coverImage} 
            alt={post.title}
            class="w-full aspect-video object-cover"
          />
        </div>
      )}
      
      <!-- 文章内容 -->
      <div class="max-w-3xl mx-auto">
        <div class="prose prose-lg dark:prose-invert 
                    prose-headings:font-bold prose-headings:tracking-tight
                    prose-h2:text-2xl prose-h2:mt-12 prose-h2:mb-4
                    prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-3
                    prose-p:text-gray-600 dark:prose-p:text-gray-400 prose-p:leading-relaxed
                    prose-a:text-primary-600 dark:prose-a:text-primary-400 prose-a:no-underline hover:prose-a:underline
                    prose-code:bg-gray-100 dark:prose-code:bg-dark-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded
                    prose-pre:bg-gray-900 dark:prose-pre:bg-dark-100 prose-pre:rounded-xl
                    prose-img:rounded-xl
                    prose-ul:text-gray-600 dark:prose-ul:text-gray-400
                    prose-ol:text-gray-600 dark:prose-ol:text-gray-400
                    prose-li:marker:text-primary-500
                    max-w-none">
          {post.body?.map((block: any) => {
            if (block._type === 'block') {
              return <Fragment set:html={JSON.stringify(block).replace(/&/g, "&amp;").replace(/</g, "&lt;").replace(/>/g, "&gt;").replace(/"/g, "&quot;")} />;
            } else if (block._type === 'image' && block.asset) {
              return <img src={block.asset.url} alt={block.alt || ''} class="rounded-xl my-4" />;
            } else if (block._type === 'code') {
              return (
                <pre class="bg-gray-900 dark:bg-dark-100 rounded-xl p-4 my-4 overflow-x-auto">
                  <code>{block.code}</code>
                </pre>
              );
            }
            return null;
          })}
        </div>
        
        <!-- 返回按钮 -->
        <div class="mt-16 pt-8 border-t border-gray-200 dark:border-dark-200">
          <Button href="/blog" variant="ghost">
            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
            </svg>
            返回日志列表
          </Button>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  /* 为 prose 添加额外样式 */
  .prose :where(h2):not(:where([class~="not-prose"] *)) {
    @apply border-b border-gray-200 dark:border-dark-200 pb-2;
  }
</style>
