---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';

// 联系方式
const contactInfo = [
  {
    icon: 'email',
    title: '邮箱',
    value: 'renmengkai@gmail.com',
    link: 'mailto:renmengkai@gmail.com'
  },
  {
    icon: 'phone',
    title: '电话',
    value: '+86 155 1119 9912',
    link: 'tel:+8615511199912'
  },
  {
    icon: 'location',
    title: '地址',
    value: '河北省石家庄市长安区谈固大街',
    link: null
  }
];

// 社交媒体
const socials = [
  { name: 'GitHub', icon: 'github', url: 'https://github.com/renmengkai' },
];

// 工作时间
const workHours = [
  { day: '周一至周五', hours: '9:00 - 18:00' },
  { day: '周六', hours: '10:00 - 16:00' },
  { day: '周日', hours: '休息' }
];
---

<Layout 
  title="联系我们 - RMK"
  description="与我们取得联系，讨论项目合作或技术咨询"
>
  <!-- Hero 区域 -->
  <section class="pt-32 pb-12">
    <div class="container-custom">
      <div class="text-center mb-4">
        <span class="text-sm font-medium text-gray-400 uppercase tracking-wider">联系我们</span>
      </div>
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 text-center max-w-4xl mx-auto mb-6">
        让我们开始对话
      </h1>
      <p class="text-lg text-gray-500 text-center max-w-2xl mx-auto">
        无论是项目咨询、技术探讨还是简单的交流，我们都期待收到您的消息。
      </p>
    </div>
  </section>

  <!-- 联系方式卡片 -->
  <section class="py-6">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {contactInfo.map((info) => (
          <div class="bg-white rounded-2xl border border-gray-100 p-6 shadow-card hover:shadow-card-hover transition-shadow">
            <div class="w-12 h-12 rounded-xl bg-gray-100 flex items-center justify-center mb-4">
              {info.icon === 'email' && (
                <svg class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              )}
              {info.icon === 'phone' && (
                <svg class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              )}
              {info.icon === 'location' && (
                <svg class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
            </div>
            <h3 class="font-semibold text-gray-900 mb-1">{info.title}</h3>
            {info.link ? (
              <a href={info.link} class="text-gray-500 hover:text-gray-900 transition-colors">
                {info.value}
              </a>
            ) : (
              <p class="text-gray-500">{info.value}</p>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- 联系表单区域 -->
  <section class="py-8">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- 左侧表单 -->
        <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-card">
          <h2 class="text-2xl font-bold text-gray-900 mb-2">发送消息</h2>
          <p class="text-gray-500 mb-8">填写以下表单，我们会尽快回复您。</p>
          
          <!-- 成功/失败提示 -->
          <div id="form-status" class="hidden mb-6 p-4 rounded-xl"></div>
          
          <form id="contact-form" class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">姓名 <span class="text-red-500">*</span></label>
                <input 
                  type="text" 
                  id="name" 
                  name="name"
                  placeholder="您的姓名"
                  class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-gray-400 focus:ring-2 focus:ring-gray-100 outline-none transition-all"
                />
                <p id="name-error" class="mt-1 text-sm text-red-500 hidden"></p>
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">邮箱 <span class="text-red-500">*</span></label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  placeholder="your@email.com"
                  class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-gray-400 focus:ring-2 focus:ring-gray-100 outline-none transition-all"
                />
                <p id="email-error" class="mt-1 text-sm text-red-500 hidden"></p>
              </div>
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">主题 <span class="text-red-500">*</span></label>
              <select 
                id="subject" 
                name="subject"
                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-gray-400 focus:ring-2 focus:ring-gray-100 outline-none transition-all bg-white"
              >
                <option value="">请选择咨询类型</option>
                <option value="project">项目合作</option>
                <option value="tech">技术咨询</option>
                <option value="feedback">反馈建议</option>
                <option value="other">其他</option>
              </select>
              <p id="subject-error" class="mt-1 text-sm text-red-500 hidden"></p>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">消息内容 <span class="text-red-500">*</span></label>
              <textarea 
                id="message" 
                name="message"
                rows="5"
                placeholder="请详细描述您的需求或问题..."
                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-gray-400 focus:ring-2 focus:ring-gray-100 outline-none transition-all resize-none"
              ></textarea>
              <p id="message-error" class="mt-1 text-sm text-red-500 hidden"></p>
              <p class="mt-1 text-xs text-gray-400">最少10个字符，最多2000个字符</p>
            </div>
            
            <button 
              type="submit" 
              id="submit-btn"
              class="inline-flex items-center justify-center gap-2 font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-gray-300 focus:ring-offset-2 bg-dark-100 text-white hover:bg-dark-300 px-6 py-3 rounded-full w-full sm:w-auto"
            >
              <span id="btn-text">发送消息</span>
              <svg id="btn-arrow" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
              <svg id="btn-loading" class="w-4 h-4 animate-spin hidden" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>
          </form>
        </div>
        
        <!-- 右侧信息 -->
        <div class="space-y-6">
          <!-- 工作时间 -->
          <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-card">
            <h3 class="text-xl font-semibold text-gray-900 mb-6">工作时间</h3>
            <div class="space-y-4">
              {workHours.map((item) => (
                <div class="flex justify-between items-center pb-4 border-b border-gray-100 last:border-0 last:pb-0">
                  <span class="text-gray-600">{item.day}</span>
                  <span class="font-medium text-gray-900">{item.hours}</span>
                </div>
              ))}
            </div>
          </div>
          
          <!-- 社交媒体 -->
          <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-card">
            <h3 class="text-xl font-semibold text-gray-900 mb-6">关注我们</h3>
            <div class="flex flex-wrap gap-3">
              {socials.map((social) => (
                <a 
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 px-4 py-2 rounded-full bg-gray-100 text-gray-600 hover:bg-gray-200 transition-colors"
                >
                  {social.icon === 'github' && (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  )}
                  <span class="text-sm font-medium">{social.name}</span>
                </a>
              ))}
            </div>
          </div>
          
          <!-- 常见问题提示 -->
          <div class="bg-gray-50 rounded-2xl p-8">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl bg-white flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">有疑问？</h3>
                <p class="text-gray-500 text-sm mb-4">
                  在发送消息之前，您可以先查看我们的常见问题解答，也许能找到您想要的答案。
                </p>
                <Button href="/about#faq" variant="secondary" size="sm">
                  查看常见问题
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA 区域 -->
  <section class="py-10">
    <div class="container-custom">
      <div class="bg-dark-100 rounded-3xl p-12 lg:p-16 text-center relative overflow-hidden">
        <!-- 背景装饰 -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-primary-500/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-primary-500/10 rounded-full blur-3xl"></div>
        
        <div class="relative z-10">
          <h2 class="text-3xl lg:text-4xl font-bold text-white mb-4">
            期待与您的合作
          </h2>
          <p class="text-gray-400 max-w-xl mx-auto mb-8">
            我们始终致力于为客户提供最优质的服务和解决方案，让我们一起创造卓越。
          </p>
          <div class="flex flex-wrap items-center justify-center gap-4">
            <Button href="/projects" variant="primary" showArrow class="bg-primary-500 text-gray-900 font-semibold hover:bg-primary-400">
              查看作品
            </Button>
            <Button href="/about" variant="ghost" class="text-white hover:bg-white/10">
              了解更多
            </Button>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // 表单元素
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const statusDiv = document.getElementById('form-status') as HTMLDivElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text') as HTMLSpanElement;
  const btnArrow = document.getElementById('btn-arrow') as HTMLElement;
  const btnLoading = document.getElementById('btn-loading') as HTMLElement;

  // 输入框元素
  const nameInput = document.getElementById('name') as HTMLInputElement;
  const emailInput = document.getElementById('email') as HTMLInputElement;
  const subjectSelect = document.getElementById('subject') as HTMLSelectElement;
  const messageTextarea = document.getElementById('message') as HTMLTextAreaElement;

  // 错误提示元素
  const nameError = document.getElementById('name-error') as HTMLParagraphElement;
  const emailError = document.getElementById('email-error') as HTMLParagraphElement;
  const subjectError = document.getElementById('subject-error') as HTMLParagraphElement;
  const messageError = document.getElementById('message-error') as HTMLParagraphElement;

  // 邮箱验证正则
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

  // 清除错误提示
  function clearErrors() {
    [nameError, emailError, subjectError, messageError].forEach(el => {
      el.textContent = '';
      el.classList.add('hidden');
    });
    [nameInput, emailInput, subjectSelect, messageTextarea].forEach(el => {
      el.classList.remove('border-red-500');
    });
  }

  // 显示错误
  function showError(element: HTMLElement, errorEl: HTMLParagraphElement, message: string) {
    element.classList.add('border-red-500');
    errorEl.textContent = message;
    errorEl.classList.remove('hidden');
  }

  // 前端验证
  function validateForm(): boolean {
    clearErrors();
    let isValid = true;

    // 姓名验证
    const name = nameInput.value.trim();
    if (!name) {
      showError(nameInput, nameError, '请输入您的姓名');
      isValid = false;
    } else if (name.length < 2) {
      showError(nameInput, nameError, '姓名至少需要2个字符');
      isValid = false;
    } else if (name.length > 50) {
      showError(nameInput, nameError, '姓名不能超过50个字符');
      isValid = false;
    }

    // 邮箱验证
    const email = emailInput.value.trim();
    if (!email) {
      showError(emailInput, emailError, '请输入您的邮箱');
      isValid = false;
    } else if (!emailRegex.test(email)) {
      showError(emailInput, emailError, '请输入有效的邮箱地址');
      isValid = false;
    }

    // 主题验证
    const subject = subjectSelect.value;
    if (!subject) {
      showError(subjectSelect, subjectError, '请选择咨询类型');
      isValid = false;
    }

    // 消息内容验证
    const message = messageTextarea.value.trim();
    if (!message) {
      showError(messageTextarea, messageError, '请输入消息内容');
      isValid = false;
    } else if (message.length < 10) {
      showError(messageTextarea, messageError, '消息内容至少需要10个字符');
      isValid = false;
    } else if (message.length > 2000) {
      showError(messageTextarea, messageError, '消息内容不能超过2000个字符');
      isValid = false;
    }

    return isValid;
  }

  // 设置加载状态
  function setLoading(loading: boolean) {
    submitBtn.disabled = loading;
    if (loading) {
      btnText.textContent = '发送中...';
      btnArrow.classList.add('hidden');
      btnLoading.classList.remove('hidden');
      submitBtn.classList.add('opacity-70', 'cursor-not-allowed');
    } else {
      btnText.textContent = '发送消息';
      btnArrow.classList.remove('hidden');
      btnLoading.classList.add('hidden');
      submitBtn.classList.remove('opacity-70', 'cursor-not-allowed');
    }
  }

  // 显示状态消息
  function showStatus(success: boolean, message: string) {
    statusDiv.classList.remove('hidden', 'bg-green-50', 'text-green-700', 'bg-red-50', 'text-red-700');
    if (success) {
      statusDiv.classList.add('bg-green-50', 'text-green-700');
    } else {
      statusDiv.classList.add('bg-red-50', 'text-red-700');
    }
    statusDiv.textContent = message;
    // 滚动到状态消息
    statusDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
  }

  // 表单提交
  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // 前端验证
    if (!validateForm()) {
      return;
    }

    setLoading(true);
    statusDiv.classList.add('hidden');

    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          name: nameInput.value.trim(),
          email: emailInput.value.trim(),
          subject: subjectSelect.value,
          message: messageTextarea.value.trim(),
        }),
      });

      const result = await response.json();

      if (result.success) {
        showStatus(true, result.message || '消息发送成功，我们会尽快回复您！');
        // 重置表单
        form.reset();
        clearErrors();
      } else {
        // 处理服务端验证错误
        if (result.errors) {
          clearErrors();
          if (result.errors.name) showError(nameInput, nameError, result.errors.name);
          if (result.errors.email) showError(emailInput, emailError, result.errors.email);
          if (result.errors.subject) showError(subjectSelect, subjectError, result.errors.subject);
          if (result.errors.message) showError(messageTextarea, messageError, result.errors.message);
        }
        showStatus(false, result.message || '发送失败，请检查表单内容');
      }
    } catch (error) {
      console.error('Submit error:', error);
      showStatus(false, '网络错误，请稍后重试');
    } finally {
      setLoading(false);
    }
  });

  // 实时清除错误提示
  [nameInput, emailInput, messageTextarea].forEach(input => {
    input.addEventListener('input', () => {
      const errorEl = document.getElementById(`${input.id}-error`) as HTMLParagraphElement;
      input.classList.remove('border-red-500');
      errorEl.classList.add('hidden');
    });
  });

  subjectSelect.addEventListener('change', () => {
    subjectSelect.classList.remove('border-red-500');
    subjectError.classList.add('hidden');
  });
</script>
