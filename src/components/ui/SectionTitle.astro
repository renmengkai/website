---
// Section 标题组件
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  class?: string;
}

const { 
  title, 
  subtitle,
  centered = true,
  class: className = '' 
} = Astro.props;
---

<div class:list={[centered && 'text-center', 'mb-12 lg:mb-16', className]}>
  {subtitle && (
    <p class="text-sm font-medium text-gray-400 uppercase tracking-wider mb-3">
      {subtitle}
    </p>
  )}
  <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 text-balance">
    {title}
  </h2>
  {Astro.slots.has('default') && (
    <p class="mt-4 text-lg text-gray-500 max-w-2xl mx-auto">
      <slot />
    </p>
  )}
</div>
