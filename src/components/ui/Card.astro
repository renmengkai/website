---
// 卡片组件
interface Props {
  href?: string;
  class?: string;
  hover?: boolean;
  padding?: 'sm' | 'md' | 'lg';
}

const { 
  href, 
  class: className = '', 
  hover = true,
  padding = 'md'
} = Astro.props;

const Tag = href ? 'a' : 'div';

const paddings = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};
---

<Tag
  href={href}
  class:list={[
    'block rounded-2xl transition-all duration-200',
    'bg-white',
    'border border-gray-100',
    'shadow-card',
    hover && 'hover:shadow-card-hover hover:border-gray-200',
    hover && href && 'cursor-pointer',
    paddings[padding],
    className
  ]}
>
  <slot />
</Tag>
