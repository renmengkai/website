---
// 项目卡片组件
import Card from './ui/Card.astro';

interface Props {
  title: string;
  description: string;
  slug: { current: string };
  thumbnail?: string;
  technologies?: string[];
  featured?: boolean;
}

const { title, description, slug, thumbnail, technologies = [], featured = false } = Astro.props;
---

<Card href={`/projects/${slug.current}`} class="group overflow-hidden relative">
  <!-- 精选标记 -->
  {featured && (
    <div class="absolute top-4 right-4 z-10">
      <span class="inline-flex items-center px-2.5 py-1 bg-primary-500/20 rounded-full text-xs font-medium text-gray-700">
        <svg class="w-3 h-3 mr-1 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        精选
      </span>
    </div>
  )}
  
  <!-- 缩略图 -->
  {thumbnail && (
    <div class="relative -mx-6 -mt-6 mb-5 overflow-hidden">
      <div class="aspect-video bg-gray-50">
        <img 
          src={thumbnail} 
          alt={title}
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        />
      </div>
    </div>
  )}
  
  <!-- 标题 -->
  <h3 class="text-lg font-semibold text-gray-900 mb-2
             group-hover:text-gray-600 transition-colors">
    {title}
  </h3>
  
  <!-- 描述 -->
  <p class="text-gray-500 text-sm leading-relaxed mb-4 line-clamp-2">
    {description}
  </p>
  
  <!-- 技术栈标签 -->
  {technologies.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {technologies.slice(0, 4).map((tech) => (
        <span class="inline-block px-2.5 py-1 bg-gray-100 rounded-full text-xs font-medium text-gray-600">
          {tech}
        </span>
      ))}
      {technologies.length > 4 && (
        <span class="inline-block px-2.5 py-1 bg-gray-100 rounded-full text-xs font-medium text-gray-500">
          +{technologies.length - 4}
        </span>
      )}
    </div>
  )}
  
  <!-- 查看更多指示 -->
  <div class="mt-4 flex items-center text-sm text-gray-900 
              opacity-0 group-hover:opacity-100 transition-opacity">
    查看详情
    <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
  </div>
</Card>
